const App = () => {
  /* ======================================================
     ğŸ¯ å¤šå·¥ç¨‹è³‡æ–™
  ====================================================== */
  const [projects, setProjects] = React.useState(loadProjects());
  const [project, setProject] = React.useState("");

  const updateProjectList = (projectName, data) => {
    let updated;

    if (typeof data === "object" && !Array.isArray(data)) {
      updated = { ...projects, [projectName]: data };
    } else {
      updated = data;
    }

    setProjects(updated);
    saveProjects(updated);
  };
  /* ======================================================
     ğŸ¯ äº”å¤§è³‡æ–™åº«ï¼ˆæ¨¡å¼ Cï¼‰
  ====================================================== */
  const [sheetTick, setSheetTick] = React.useState(0);

  const [sheetVersion, setSheetVersion] = React.useState({
    material: "",
    purchase: "",
    fabricate: "",
    transport: "",
    install: "",
  });

  const [materialDB, setMaterialDB] = React.useState(loadDB("materialDB", []));
  const [purchaseDB, setPurchaseDB] = React.useState(loadDB("purchaseDB", []));
  const [fabricateDB, setFabricateDB] = React.useState(loadDB("fabricateDB", []));
  const [transportDB, setTransportDB] = React.useState(loadDB("transportDB", []));
  const [installDB, setInstallDB] = React.useState(loadDB("installDB", []));

  /* ======================================================
     ğŸ“Œ å•Ÿå‹•æ™‚ï¼†è¦–çª—å›åˆ°ç„¦é» â†’ æª¢æŸ¥ Google Sheet
  ====================================================== */
  React.useEffect(() => setSheetTick((t) => t + 1), []);

  React.useEffect(() => {
    const f = () => setSheetTick((t) => t + 1);
    window.addEventListener("focus", f);
    return () => window.removeEventListener("focus", f);
  }, []);

  /* ======================================================
     ğŸ“Œ ä¾ç…§æ¨¡å¼ C åŒæ­¥ Google Sheetï¼ˆäº”å¤§è³‡æ–™åº«ï¼‰
  ====================================================== */
  React.useEffect(() => {
    syncDB({
      type: "material",
      url: GOOGLE_SHEETS.material,
      mapping: ["category", "spec", "unit", "weight", "price"],
      setDB: setMaterialDB,
      setSheetVersion,
    });
  }, [sheetTick]);

  React.useEffect(() => {
    syncDB({
      type: "purchase",
      url: GOOGLE_SHEETS.purchase,
      mapping: ["category", "spec", "unit", "price"],
      setDB: setPurchaseDB,
      setSheetVersion,
    });
  }, [sheetTick]);

  React.useEffect(() => {
    syncDB({
      type: "fabricate",
      url: GOOGLE_SHEETS.fabricate,
      mapping: ["category", "mode", "spec", "qty", "unit", "price"],
      setDB: setFabricateDB,
      setSheetVersion,
    });
  }, [sheetTick]);

  React.useEffect(() => {
    syncDB({
      type: "transport",
      url: GOOGLE_SHEETS.transport,
      mapping: ["category", "spec", "region", "price"],
      setDB: setTransportDB,
      setSheetVersion,
    });
  }, [sheetTick]);

  React.useEffect(() => {
    syncDB({
      type: "install",
      url: GOOGLE_SHEETS.install,
      mapping: ["category", "mode", "spec", "unit", "price"],
      setDB: setInstallDB,
      setSheetVersion,
    });
  }, [sheetTick]);
  /* ======================================================
     ğŸ¯ ç›®å‰å·¥ç¨‹è³‡æ–™ï¼ˆallItems & manualAdjustï¼‰
  ====================================================== */
  const current = projects[project] || {
    allItems: [],
    manualAdjust: {},
  };

  const updateCurrentProject = (newData) => {
    updateProjectList(project, {
      ...current,
      ...newData,
    });
  };

  /* ======================================================
     ğŸ¯ UIï¼šåˆ†é ç®¡ç†
  ====================================================== */
  const tabs = ["ææ–™", "å¸‚è³¼å“", "è£½ä½œæˆæœ¬", "é‹è¼¸è²»ç”¨", "ç¾å ´å®‰è£", "ç¸½è¡¨"];
  const [tab, setTab] = React.useState("ææ–™");


  /* ============================================================
     ğŸ§± ææ–™æˆæœ¬è©¦ç®—ï¼ˆæ¿æ / å‹é‹¼ï¼‰ï¼‹ æ˜ç´°ï¼ˆå¯ä¿®æ”¹ / åˆªé™¤ï¼‰
  ============================================================ */
  const MaterialCalc = ({ db, addItem, items, deleteItem, updateItem }) => {
    const [category, setCategory] = React.useState("");
    const [spec, setSpec] = React.useState("");

    // æ¿æ
    const [L, setL] = React.useState("");
    const [W, setW] = React.useState("");
    const [pcs, setPcs] = React.useState("");

    // å‹é‹¼
    const [len2, setLen2] = React.useState("");
    const [qty, setQty] = React.useState("");

    const categories = [...new Set(db.map((x) => x.category))];
    const specs = db.filter((x) => x.category === category).map((x) => x.spec);
    const selected = db.find((x) => x.category === category && x.spec === spec);

    const isPlate =
      selected &&
      (selected.unit?.includes("mÂ²") ||
        category.includes("æ¿") ||
        spec.includes("æ¿"));

    const subtotal = (() => {
      if (!selected) return 0;
      if (isPlate) {
        const area = Number(L) * Number(W) * Number(pcs);
        const kg = area * (selected.weight || 0);
        return kg * (selected.price || 0);
      }
      const kg2 = Number(len2) * Number(qty) * (selected.weight || 0);
      return kg2 * (selected.price || 0);
    })();

    const weight = (() => {
      if (!selected) return 0;
      if (isPlate)
        return Number(L) * Number(W) * Number(pcs) * (selected.weight || 0);
      return Number(len2) * Number(qty) * (selected.weight || 0);
    })();

    const add = () => {
      if (!selected || subtotal <= 0) return alert("è«‹å¡«å¯«å®Œæ•´ææ–™è³‡è¨Š");

      addItem({
        id: Date.now(),
        type: "ææ–™æˆæœ¬",
        category,
        spec,
        length: isPlate ? L : len2,
        width: isPlate ? W : "",
        qty: isPlate ? pcs : qty,
        unit: selected.unit || "kg",
        weight,
        unitPrice: selected.price || 0,
        subtotal,
      });

      setL(""); setW(""); setPcs(""); setLen2(""); setQty(""); setSpec("");
    };

    const materialItems = (items || []).filter((x) => x.type === "ææ–™æˆæœ¬");
    const totalWeight = materialItems.reduce(
      (s, x) => s + (Number(x.weight) || 0),
      0
    );
    const totalCost = materialItems.reduce(
      (s, x) => s + (Number(x.subtotal) || 0),
      0
    );

    return (
      <div className="bg-white p-4 rounded-xl shadow mb-4">
        <h2 className="text-xl font-bold mb-3">ğŸ§± ææ–™æˆæœ¬è©¦ç®—</h2>
        {/* ===== é¸æ“‡ææ–™ ===== */}
        <div className="mb-3">
          <label>ææ–™åˆ†é¡ï¼š</label>
          <select
            className="border p-2 rounded ml-2"
            value={category}
            onChange={(e) => { setCategory(e.target.value); setSpec(""); }}
          >
            <option value="">è«‹é¸æ“‡</option>
            {categories.map((c) => <option key={c}>{c}</option>)}
          </select>
        </div>

        {category && (
          <div className="mb-3">
            <label>è¦æ ¼ï¼š</label>
            <select
              className="border p-2 rounded ml-2"
              value={spec}
              onChange={(e) => setSpec(e.target.value)}
            >
              <option value="">è«‹é¸æ“‡</option>
              {specs.map((s) => <option key={s}>{s}</option>)}
            </select>
          </div>
        )}

        {/* ===== æ¿æè¼¸å…¥å€ ===== */}
        {spec && selected && isPlate && (
          <div className="grid grid-cols-3 gap-3 my-3">
            <div>
              <label>é•·åº¦(m)</label>
              <input className="border p-2 rounded w-full"
                value={L} onChange={(e) => setL(e.target.value)} />
            </div>

            <div>
              <label>å¯¬åº¦(m)</label>
              <input className="border p-2 rounded w-full"
                value={W} onChange={(e) => setW(e.target.value)} />
            </div>

            <div>
              <label>ç‰‡æ•¸</label>
              <input className="border p-2 rounded w-full"
                value={pcs} onChange={(e) => setPcs(e.target.value)} />
            </div>

            <div className="col-span-3 font-bold">
              é¢ç©ï¼š{(Number(L) * Number(W) * Number(pcs) || 0).toFixed(3)} mÂ²
            </div>
          </div>
        )}

        {/* ===== å‹é‹¼è¼¸å…¥å€ ===== */}
        {spec && selected && !isPlate && (
          <div className="grid grid-cols-2 gap-3 my-3">
            <div>
              <label>é•·åº¦(m)</label>
              <input className="border p-2 rounded w-full"
                value={len2} onChange={(e) => setLen2(e.target.value)} />
            </div>
            <div>
              <label>æ”¯æ•¸</label>
              <input className="border p-2 rounded w-full"
                value={qty} onChange={(e) => setQty(e.target.value)} />
            </div>
          </div>
        )}

        {/* å°è¨ˆ */}
        {weight > 0 && (
          <div className="text-lg font-bold text-right">
            é‡é‡ï¼š <span className="text-emerald-600">{weight.toFixed(2)}</span> kg
          </div>
        )}

        <div className="text-xl font-bold text-right mt-3">
          å°è¨ˆï¼š <span className="text-blue-600">{subtotal.toFixed(0)}</span> å…ƒ
        </div>

        {subtotal > 0 && (
          <button
            className="mt-4 bg-emerald-600 text-white px-4 py-2 rounded"
            onClick={add}
          >
            â• åŠ å…¥ç¸½è¡¨
          </button>
        )}

        {/* ===== æ˜ç´°è¡¨ ===== */}
        {materialItems.length > 0 && (
          <div className="mt-8">
            <h3 className="text-lg font-bold mb-2">ğŸ“‹ ææ–™æˆæœ¬æ˜ç´°</h3>

            <table className="w-full text-sm border rounded">
              <thead className="bg-gray-100">
                <tr>
                  <th className="p-2">åˆ†é¡</th>
                  <th className="p-2">è¦æ ¼</th>
                  <th className="p-2">é•·åº¦</th>
                  <th className="p-2">å¯¬åº¦</th>
                  <th className="p-2">æ•¸é‡</th>
                  <th className="p-2">é‡é‡</th>
                  <th className="p-2">å–®åƒ¹</th>
                  <th className="p-2">å°è¨ˆ</th>
                  <th className="p-2">æ“ä½œ</th>
                </tr>
              </thead>

              <tbody>
                {materialItems.map((it) => (
                  <tr key={it.id} className="border-t">
                    <td className="p-2">{it.category}</td>
                    <td className="p-2">{it.spec}</td>

                    {/* å¯æ”¹æ¬„ä½ */}
                    <td className="p-2">
                      <input
                        className="border p-1 w-20 text-right"
                        value={it.length}
                        onChange={(e) =>
                          updateItem(it.id, { length: e.target.value })
                        }
                      />
                    </td>

                    <td className="p-2">
                      <input
                        className="border p-1 w-20 text-right"
                        value={it.width}
                        onChange={(e) =>
                          updateItem(it.id, { width: e.target.value })
                        }
                      />
                    </td>

                    <td className="p-2">
                      <input
                        className="border p-1 w-20 text-right"
                        value={it.qty}
                        onChange={(e) =>
                          updateItem(it.id, { qty: e.target.value })
                        }
                      />
                    </td>

                    <td className="p-2">{it.weight?.toFixed(2)}</td>
                    <td className="p-2">{it.unitPrice}</td>
                    <td className="p-2">{it.subtotal}</td>

                    <td className="p-2">
                      <button className="text-red-600" onClick={() => deleteItem(it.id)}>
                        åˆªé™¤
                      </button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>

            <div className="text-right font-bold mt-2">
              ç¸½é‡é‡ï¼š{totalWeight.toFixed(2)} kgã€€
              æˆæœ¬å°è¨ˆï¼š{totalCost.toLocaleString()} å…ƒ
            </div>
          </div>
        )}
      </div>
    );
  };

  /* ============================================================
     ğŸ›’ å¸‚è³¼å“è©¦ç®— ï¼‹ æ˜ç´°ï¼ˆé–‹é ­ï¼‰
  ============================================================ */
